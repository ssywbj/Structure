<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fling_aty_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".FlingAnimActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="6dp"
        android:text="SwipeRefreshLayout"
        android:textAllCaps="false"
        android:textColor="@android:color/black"
        android:textSize="22sp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="6dp"
        android:text="NestedScrollView"
        android:textAllCaps="false"
        android:textColor="@android:color/black"
        android:textSize="22sp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="6dp"
        android:text="FlingAnim"
        android:textAllCaps="false"
        android:textColor="@android:color/black"
        android:textSize="22sp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="6dp"
        android:text="DampingView"
        android:textAllCaps="false"
        android:textAppearance="@android:color/black"
        android:textSize="22sp"
        android:visibility="visible" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="6dp"
        android:text="Mode1"
        android:textAllCaps="false"
        android:textAppearance="@android:color/black"
        android:textSize="22sp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="6dp"
        android:text="Mode2-场景1"
        android:textAllCaps="false"
        android:textAppearance="@android:color/black"
        android:textSize="22sp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="6dp"
        android:text="Mode2-场景2"
        android:textAllCaps="false"
        android:textAppearance="@android:color/black"
        android:textSize="22sp" />
</LinearLayout>