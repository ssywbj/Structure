<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="openSwipeRefreshActivity"
        android:padding="6dp"
        android:text="SwipeRefreshLayout"
        android:textAllCaps="false"
        android:textColor="@android:color/black"
        android:textSize="22sp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="openDampingViewActivity"
        android:padding="6dp"
        android:text="DampingView"
        android:textAllCaps="false"
        android:textAppearance="@android:color/black"
        android:textSize="22sp"
        android:visibility="visible" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="openDampingActivity"
        android:padding="6dp"
        android:text="Mode1"
        android:textAllCaps="false"
        android:textAppearance="@android:color/black"
        android:textSize="22sp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="openDampingActivity2"
        android:padding="6dp"
        android:text="Mode2-场景1"
        android:textAllCaps="false"
        android:textAppearance="@android:color/black"
        android:textSize="22sp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="openDampingActivity3"
        android:padding="6dp"
        android:text="Mode2-场景2"
        android:textAllCaps="false"
        android:textAppearance="@android:color/black"
        android:textSize="22sp" />

    <View
        android:id="@+id/view_fling"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@android:color/holo_blue_dark" />
</LinearLayout>