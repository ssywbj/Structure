<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="SportRootLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/corner_btn_bg</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
    </style>

    <style name="TextSportData">
        <item name="android:textStyle">bold|italic</item>
        <item name="android:textSize">@dimen/text_title_size</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TextSportType">
        <item name="android:textStyle">bold|italic</item>
        <item name="android:textSize">@dimen/text_subtitle_size</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
</resources>