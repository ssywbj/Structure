<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingStart="10dp"
        android:paddingEnd="10dp">

        <FrameLayout
            android:id="@+id/layout_title_bar"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:drawableStart="@drawable/wiz_icon_back"
                android:drawablePadding="10dp"
                android:gravity="center"
                android:text="@string/photo_face_config_aty"
                android:textColor="#FFFFFF"
                android:textSize="27sp" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingStart="10dp"
            android:paddingEnd="10dp">

            <com.structure.wallpaper.basic.view.WizButton
                android:id="@+id/text_item_take_photo"
                android:layout_width="match_parent"
                android:layout_height="@dimen/wiz_button_height"
                android:layout_marginTop="-50dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/wiz_button_bg_black"
                android:gravity="center"
                android:text="@string/take_photo"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/wiz_button_a4" />

            <com.structure.wallpaper.basic.view.WizButton
                android:id="@+id/text_item_pick_picture"
                android:layout_width="match_parent"
                android:layout_height="@dimen/wiz_button_height"
                android:layout_marginTop="8dp"
                android:background="@drawable/wiz_button_bg_black"
                android:gravity="center"
                android:text="@string/pick_from_album"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/wiz_button_a4" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:id="@+id/cover_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/black"
        android:visibility="gone" />
</FrameLayout>