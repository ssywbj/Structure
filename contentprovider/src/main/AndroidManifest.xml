<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.suheng.structure.contentprovider">

    <!-- provider 访问权限声明 -->
    <permission
        android:name="com.suheng.structure.provider.READ_PERMISSION"
        android:label="Person provider read permission"
        android:protectionLevel="normal" />

    <permission
        android:name="com.suheng.structure.provider.WRITE_PERMISSION"
        android:label="Person provider read permission"
        android:protectionLevel="normal" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <provider
            android:name=".PersonProvider"
            android:authorities="com.suheng.structure.provider"
            android:exported="true"
            android:process=":provider"
            android:readPermission="com.suheng.structure.provider.READ_PERMISSION"
            android:writePermission="com.suheng.structure.provider.WRITE_PERMISSION" />
    </application>

</manifest>