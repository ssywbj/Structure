<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.suheng.structure.view.AnimImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="4dp" />

    <com.suheng.structure.view.AnimImageView2
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="4dp" />

    <com.suheng.structure.view.AnimImageView3
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:src="@drawable/map_my_locating01" />

    <com.suheng.structure.view.AnimImageView3
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:src="@drawable/vector_delete" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_selected"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Selected"
            android:textAllCaps="false" />

        <com.suheng.structure.view.AnimImageView4
            android:id="@+id/aiv4_selected"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_margin="4dp"/>

        <com.suheng.structure.view.AnimImageView4
            android:id="@+id/aiv4_unselected"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"/>

        <Button
            android:id="@+id/btn_unselected"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Unselected"
            android:textAllCaps="false" />
    </LinearLayout>

</LinearLayout>
