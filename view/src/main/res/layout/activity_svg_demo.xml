<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="2dp">

    <com.suheng.structure.view.SVGView
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:visibility="gone" />

    <com.suheng.structure.view.VectorView
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_marginTop="2dp"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="4dp">

        <ImageView
            android:id="@+id/image_svg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/black" />

        <ImageView
            android:id="@+id/image_svg_rev"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="4dp" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:button="@drawable/checkbox_style_selector" />

        <CheckBox
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="4dp"
            android:background="@drawable/checkbox_style_selector"
            android:button="@null"
            android:checked="true" />

        <CheckBox
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="4dp"
            android:background="@drawable/checkbox_style_selector__animated"
            android:button="@null"
            android:checked="true" />

        <CheckBox
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="4dp"
            android:background="@drawable/checkbox_style_selector__animated2"
            android:button="@null" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="4dp">

        <ImageView
            android:id="@+id/image_checked_drawable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <com.suheng.structure.view.AnimCheckBox
            android:id="@+id/anim_check_box"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:checked="false"
            android:padding="4dp"
            android:text="ACB1" />

        <RadioGroup
            android:id="@+id/svg_radio_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:orientation="horizontal">

            <!--在RadioGroup中要为每个RadioButton添加一个id，不然单选功能会生效-->

            <com.suheng.structure.view.AnimRadioButton
                android:id="@+id/radio_btn_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <com.suheng.structure.view.AnimRadioButton
                android:id="@+id/radio_btn_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:checked="true" />
        </RadioGroup>

        <!--<com.suheng.structure.view.AnimCheckBox
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="4dp"
            android:background="@drawable/checkbox_style_selector"
            android:button="@null"
            android:checked="true"
            android:text="ACB2" />-->
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="4dp">

        <ImageView
            android:id="@+id/image_water_drop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:src="@drawable/water_drop_animated" />

        <ImageView
            android:id="@+id/image_loading"
            android:layout_width="110dp"
            android:layout_height="110dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp" />
    </LinearLayout>

</LinearLayout>