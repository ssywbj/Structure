<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.suheng.structure.view">

    <!--<uses-feature android:name="android.hardware.type.watch" />-->
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".activity.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".activity.LetterSelectActivity"
            android:label="LetterSelectLayout" />
        <activity
            android:name=".activity.RecyclerViewActivity"
            android:label="RecyclerView" />
        <activity
            android:name=".activity.PictureManagerActivity"
            android:label="PictureManager" />
        <activity android:name=".activity.OpenGLActivity" />
        <activity android:name=".activity.AnimImageViewActivity" />
        <activity android:name=".activity.ListItemLayoutActivity" />
        <activity android:name=".activity.StickDotActivity" />
        <activity android:name=".activity.HeartActivity" />

    </application>

    <supports-gl-texture android:name="GL_OES_compressed_paletted_texture" />
    <supports-gl-texture android:name="GL_OES_compressed_ETC1_RGB8_texture" />

    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true" />

    <uses-permission android:name="android.permission.VIBRATE" />

</manifest>