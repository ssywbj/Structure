<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="WallpaperPickActivityTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowSwipeToDismiss">true</item>
    </style>

    <style name="WallpaperStyle1" parent="@android:style/Theme.Wallpaper"/>

    <style name="WallpaperStyle2" parent="@android:style/Theme.Wallpaper.NoTitleBar.Fullscreen"/>

    <style name="WallpaperStyle" parent="@android:style/Theme.NoTitleBar.Fullscreen">
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowShowWallpaper">true</item>
    </style>

</resources>
